<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${package.Mapper}.${table.mapperName}">

    #if(${enableCache})
        <!-- 开启二级缓存 -->
        <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    #end
    #if(${baseResultMap})
        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="${package.Entity}.${entity}">
            #foreach($field in ${table.fields})
                #if(${field.keyFlag})##生成主键排在第一位
                    <id column="${field.name}" property="${field.propertyName}" />
                #end
            #end
            #foreach($field in ${table.commonFields})##生成公共字段
                <result column="${field.name}" property="${field.propertyName}" />
            #end
            #foreach($field in ${table.fields})
                #if(!${field.keyFlag})##生成普通字段
                    <result column="${field.name}" property="${field.propertyName}" />
                #end
            #end
        </resultMap>

    #end
    #if(${baseColumnList})
        <!-- 通用查询结果列(横着排列) -->
        <sql id="Base_Column_List1">
#foreach($field in ${table.commonFields})
            ${field.name},
#end
        ${table.fieldNames}
    </sql>
    #end

    <!-- 通用查询结果列(竖着排列) -->
    <sql id="Base_Column_List2">
#if(${baseResultMap})
        #foreach($field in ${table.fields})
            ${field.name}
            #if($foreach.hasNext)
          ,
        #end
        #end
    #end
    </sql>

    <!-- 通用查询条件 -->
    <sql id="Base_Where_List">
        #if(${baseResultMap})
            #foreach($field in ${table.fields})
                <if test="${field.propertyName} != null and ${field.propertyName} != ''">
                    <![CDATA[
                AND ${field.name} = #{${field.propertyName} ,jdbcType=VARCHAR}
            ]]>
                </if>
            #end
        #end
    </sql>


    <!--  新增 -->
    <insert id="insert" parameterType="${package.Entity}.${entity}">
        <![CDATA[
			insert into ${table.name}
		]]>
        #if(${baseResultMap})
            <trim prefix="(" suffix=")" suffixOverrides="," >
                #foreach($field in ${table.fields})
                    <if test="${field.propertyName} != '' and ${field.propertyName} != null" >
                        <![CDATA[
                    ${field.name},
                ]]>
                    </if>
                #end
            </trim>
            <trim prefix="values (" suffix=")" suffixOverrides="," >
                #foreach($field in ${table.fields})
                    <if test="${field.propertyName} != '' and ${field.propertyName} != null" >
                        <![CDATA[
                    #{${field.propertyName},jdbcType=VARCHAR},
                ]]>
                    </if>
                #end
            </trim>
        #end
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="${package.Entity}.${entity}" >
        <![CDATA[
        	update ${table.name}
        ]]>
        <set >
            #if(${baseResultMap})
                #foreach($field in ${table.fields})
                    <if test="${field.propertyName} != '' and ${field.propertyName} != null" >
                        <![CDATA[
                    ${field.name} = #{${field.propertyName},jdbcType=VARCHAR},
                ]]>
                    </if>
                #end
            #end
        </set>
        <where>
            #if(${baseResultMap})
                #foreach($field in ${table.fields})
                    #if(${field.keyFlag})##生成主键排在第一位
                        <![CDATA[
                and ${field.name} = #{${field.propertyName} ,jdbcType=VARCHAR }
            ]]>
                    #end
                #end
            #end
        </where>
    </update>


    <!-- 删除 -->
    <delete id="delete"  parameterType="${package.Entity}.${entity}">
        <![CDATA[
            delete from ${table.name}
        ]]>
        <where>
            #if(${baseResultMap})
                #foreach($field in ${table.fields})
                    #if(${field.keyFlag})##生成主键排在第一位
                        <![CDATA[
                and ${field.name} = #{${field.propertyName} ,jdbcType=VARCHAR }
            ]]>
                    #end
                #end
            #end
        </where>
    </delete>


    <!--  查询详情 -->
    <select id="queryDetail" resultMap="BaseResultMap" parameterType="${package.Entity}.${entity}">
        <![CDATA[
            select
        ]]>
        <include refid="Base_Column_List1" />
        <![CDATA[
            from ${table.name} t
        ]]>
        <where>
            #if(${baseResultMap})
                #foreach($field in ${table.fields})
                    #if(${field.keyFlag})##生成主键排在第一位
                        <![CDATA[
                and ${field.name} = #{${field.propertyName} ,jdbcType=VARCHAR }
            ]]>
                    #end
                #end
            #end
        </where>
    </select>

    <!--  查询列表 -->
    <select id="queryList" resultMap="BaseResultMap" parameterType="java.util.HashMap">
        <![CDATA[
            select
        ]]>
        <include refid="Base_Column_List1" />
        <![CDATA[
            from ${table.name} t
        ]]>
        <where>
            <include refid="Base_Where_List" />
        </where>
    </select>

</mapper>
