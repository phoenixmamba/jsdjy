    </select>

    <!--  查询列表 -->
    <select id="queryList" resultMap="BaseResultMap" parameterType="java.util.HashMap">
        <![CDATA[
            select t.*
        ]]>
        <![CDATA[
            from ticket_recommend t left join ticket_project tp on t.project_id = tp.project_id
        ]]>
        <where>
            tp.project_sale_state = 2
        </where>
        order by t.sn asc
        <if test="pageSize != '' and pageSize != null" >
