<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.centit.mallserver.dao.ShoppingUserInfoDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.centit.mallserver.model.UserInfo">
        <id column="id" property="id" />
        <result column="mzuserid" property="mzuserid" />
        <result column="addTime" property="addTime" />
        <result column="mobile" property="mobile" />
        <result column="nick_name" property="nickName" />
        <result column="sex" property="sex" />
        <result column="levelname" property="levelName" />
    </resultMap>


    <!--  查询详情 -->
    <select id="selectUserDetail" resultMap="BaseResultMap" parameterType="java.lang.String">
            select t.id,t.mzuserid,t.addTime,t.mobile,t.sex,t.nick_name,t.levelname
            from shopping_user t
        <where>
            <![CDATA[
                 id = #{userId ,jdbcType=VARCHAR }
            ]]>
        </where>
    </select>

</mapper>
