<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.centit.mallserver.dao.ShoppingAssetRuleDao">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.centit.mallserver.po.ShoppingAssetRulePo">
        <result column="point_avoid_pay" property="pointAvoidPay"/>
        <result column="point_avoid_limit" property="pointAvoidLimit"/>
        <result column="account_avoid_pay" property="accountAvoidPay"/>
        <result column="account_avoid_limit" property="accountAvoidLimit"/>
    </resultMap>

    <!--  查询详情 -->
    <select id="selectDetail" resultMap="BaseResultMap">
        select t.*
        from shopping_asset_rule t
        limit 1
    </select>
</mapper>
